@model RpgMvc.Models.PersonagemViewModel
@{
    ViewBag.Title = "Detalhes do Personagem";
}
@if (@TempData["Mensagem"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Mensagem"]</div>
}
<!--Configuração para exibir mensagem de erro -->
@if (@TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["MensagemErro"]</div>
}
<h2>Detalhes do Personagem</h2>
<div>
    <hr />
    <dl class="dl-horizontal">
         <div class="form-group">
            @Html.LabelFor(model => model.Id, htmlAttributes: new { @class = "control-label col-md-2" }) 
            <div class="col-md-6">
                @Html.EditorFor(model => model.Id, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } }) 
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-2" }) 
            <div class="col-md-6">
                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } }) 
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PontosVida, htmlAttributes: new { @class = "control-label col-md-2" }) <div
                class="col-md-6">
                @Html.EditorFor(model => model.PontosVida, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } }) </div>
        </div>

         <div class="form-group">
            @Html.LabelFor(model => model.Forca, htmlAttributes: new { @class = "control-label col-md-2" }) <div
                class="col-md-6">
                @Html.EditorFor(model => model.Forca, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } }) </div>
        </div>

         <div class="form-group">
            @Html.LabelFor(model => model.Defesa, htmlAttributes: new { @class = "control-label col-md-2" }) <div
                class="col-md-6">
                @Html.EditorFor(model => model.Defesa, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } }) </div>
        </div>

         <div class="form-group">
            @Html.LabelFor(model => model.Inteligencia, htmlAttributes: new { @class = "control-label col-md-2" }) <div
                class="col-md-6">
                @Html.EditorFor(model => model.Inteligencia, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } }) </div>
        </div>

         <div class="form-group">
            @Html.LabelFor(model => model.Classe, htmlAttributes: new { @class = "control-label col-md-2" }) <div
                class="col-md-6">
                @Html.EditorFor(model => model.Classe, new { htmlAttributes = new { @class = "form-control",@readonly = "readonly" } }) </div>
        </div>
    </dl>
</div>
<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Retornar", "Index")
</p>